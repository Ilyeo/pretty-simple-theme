<style>
.hero {
  padding-top: 41px;
  background: linear-gradient(to bottom, var(--black) 79%, var(--white) 0%);
  display: grid;
  place-content: center;
}

.picture {
  position: relative;
  display: grid;
}

.picture:after {
  content: '';
  height: 100%;
  width: 100%;
  position: absolute;
  background: linear-gradient(0deg, #000000 9.66%, rgba(196, 196, 196, 0) 100%);
}

.title {
  font-family: var(--font-family-headings);
  position: absolute;
  left: 50%;
  bottom: 50%;
  color: var(--font-color-headings);
  width: 100%;
  text-align: center;
  font-size: 44px;
  transform: translate(-50%, 50%);
  z-index: 10;
}

@media (min-width: 1080px) {
  .picture img {
    height: 342px;
    width: 100%;
    object-fit: cover;
  }

  .picture:after {
    background: linear-gradient(360deg, rgba(2, 2, 2, 0.31) 20.93%, rgba(22, 22, 22, 0.21) 64.17%, rgba(175, 175, 175, 0.0382979) 99.99%, rgba(196, 196, 196, 0) 100%);
  }

  .title {
    font-size: 64px;
  }
}
</style>

<article class="hero">
  <picture class="picture">
    <img
      loading="lazy"
      src="{{ settings.image | img_url: 'medium' }}"
      alt="{{ settings.image.alt }}"
      srcset="{{ settings.image | img_url: '296x' }} 296w,
              {{ settings.image | img_url: '1007x' }} 1007w"
      sizes="(min-width: 1200px) 1007px, 78.93vw">
    <span class="title">{{ settings.title }}</span>
  </picture>
</article>
